\def\fileversion{v2.3}
\def\filedate{2022/08/05}
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeIPP}
[\filedate\space\fileversion]

\RequirePackage{mpg-colors}

\mode<presentation>

\ExplSyntaxOn
\bool_if:NTF \g_ptxcd_titlegraphic_bool
	{\setbeamercolor*{title}{fg=white,bg=MPG_blue_dark}}
	{\setbeamercolor*{title}{fg=white,bg=MPG_green_dark}}
\ExplSyntaxOff

\setbeamercolor*{frametitle}{fg=MPG_green_dark,bg=}

\setbeamercolor*{footline}{bg=,fg=MPG_grey}
%\setbeamercolor*{author in head/foot}{fg=black, bg=white}
%\setbeamercolor*{date in head/foot}{fg=black, bg=white}
\setbeamercolor*{normal text}{bg=white,fg=black}
\setbeamercolor*{alerted text}{bg=,fg=MPG_blue_dark}

\setbeamercolor{structure}{fg=MPG_green_dark}

\setbeamercolor{titlelike}{fg=MPG_green_dark,bg=white}

\setbeamercolor*{block title}{fg=MPG_green_dark,bg=white}
\setbeamercolor*{block body}{fg=black,bg=white}

\setbeamercolor*{block title alerted}{use=normal text,bg=MPG_green_light}
\setbeamercolor*{block body alerted}{use=normal text, bg=white}
\setbeamercolor*{block frame alerted}{bg=MPG_green_light}

\setbeamercolor*{block title example}{fg=MPG_blue_dark,bg=white}
\setbeamercolor*{block body example}{use=normal text, bg=white}
\setbeamercolor*{block frame example}{bg=MPG_blue_dark}

\setbeamercolor*{itemize item}{fg=black}

\mode<all>

\endinput
